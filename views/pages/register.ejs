<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
   </head>

  <body>
  <!--Site content-->
    <div class="site-wrapper">
      <%- include('../partials/header.ejs') %>

      <main class="login-page">
        <article class="login-box">
          <h2><%=formTitle%></h2>

          <form action="" method="post" id="registration">
            <label for="username">Username: </label>
            <input type="text" name="username" id="uname" placeholder="User Name" required>
            <label for="email">Email: </label>
            <input type="email" name="email" id="email-signup">
            <label for="log-pass">Password: </label>
            <input type="password" name="log-pass" id="log-pass" placeholder="Password" required>
            <label for="verify-pass">Re-enter Password: </label>
            <input type="password" name="verify-pass" id="verify-pass" placeholder="Re-enter Password" required>
            <!--Notifications info -->
            <fieldset class="email-notifications">
              <legend>Would you like email notifications?</legend>
              <label for="all-notifications">All Content</label>
              <input type="radio" name="all-notifications" value="all" id="all-notifications">
              <label for="doggy-diary-only">Doggy Diary Only</label>
              <input type="radio" name="doggy-diary-only" value="diary" id="doggy-diary-only">
              <label for="recipes-only">Recipes Only</label>
              <input type="radio" name="recipes-only" value="recipes" id="recipes-only">
            </fieldset>
            <input type="submit" value="Sign-up">
          </form>

        </article>
      </main>

      <!--footer-->
      <footer class="footer">
        <%- include('../partials/footer.ejs') %>
      </footer>
    </div>
  </body>
</html>
